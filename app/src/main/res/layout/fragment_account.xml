<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Fragment.AccountFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Dashboard"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        android:background="@color/mainColor"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:backgroundTint="#26A69A"
                app:cardCornerRadius="7dp">

<!--                android:backgroundTint="#E3F2FD"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            android:padding="7dp"
                            android:src="@drawable/profile_preview"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:text="profile Name"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_medium"/>

                        <TextView
                            android:id="@+id/textViewNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="7667815236"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_medium"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="My Profile"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/myCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="My Cart"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/icon_cart"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/myOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="My Order"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_shopping_bag"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/contactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="Contact Us"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_contacts"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/aboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="About Us"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_info"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/faqs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="FAQs"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_message"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="@string/help"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/ic_help"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

                <TextView
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:drawablePadding="10dp"
                    android:text="Logout"
                    android:textSize="17sp"
                    android:textColor="@color/accountTextColor"
                    android:fontFamily="@font/nunito_medium"
                    android:drawableStart="@drawable/baseline_power_on"
                    android:drawableEnd="@drawable/ic_arrow_forward"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>